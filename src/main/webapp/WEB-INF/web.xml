<web-app version="3.1" 
	xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">

	<display-name>IOTManager</display-name>
	<description>A application to manage Sensors </description>

	<servlet>
        <servlet-name>IOTManager-dispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>IOTManager-dispatcher</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    
	<!-- For root context for dependency injection into the service layer-->
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	
	
	
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			/WEB-INF/spring-core-config.xml,
			/WEB-INF/spring-security.xml,
			/WEB-INF/spring-database.xml
		</param-value>
	</context-param>

	<!-- Spring Security -->
	<filter>
		<filter-name>springSecurityFilterChain</filter-name>
		<filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>springSecurityFilterChain</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	 <env-entry>
        <env-entry-name>MYSQL_CONNECTIONURL</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>jdbc:mysql://localhost:3306/iotdatabase</env-entry-value>
    </env-entry>
    <env-entry>
        <env-entry-name>DRIVER</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>com.mysql.jdbc.Driver</env-entry-value>
    </env-entry>
    <env-entry>
        <env-entry-name>MYSQL_USER</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>app</env-entry-value>
    </env-entry>
    <env-entry>
        <env-entry-name>MYSQL_PASS</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>1234</env-entry-value>
    </env-entry>
</web-app>